@model List<Library.ViewModels.Role.UserRoleViewModel>

@{
    var roleId = ViewBag.roleId;
}
<br/>
<form method="post">
    <div class="card text-white bg-secondary mb-3">
        <div class="card-header">
            <h2>Users of this role</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].UserId" />
                    <input type="hidden" asp-for="@Model[i].UserName" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">
                        @Model[i].UserName
                    </label>
                </div>
            }
        </div>
        <br/>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary" style="width:auto" />
            <a asp-action="EditRole" asp-route-id="@roleId" class="btn btn-warning" style="width:auto">Cancel</a>
        </div>
    </div>
</form>