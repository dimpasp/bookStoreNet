@model Library.ViewModels.Student.StudentViewModel
@using Library.ViewModels.Student

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<br />
<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col">
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" class="form-control" type="tel" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="Age" class="control-label"></label>
                    <input asp-for="Age" class="form-control" type="tel" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" type="tel" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col">
                    <label asp-for="City" class="control-label"></label>
                    <input asp-for="City" class="form-control" type="tel" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" type="tel" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="col">
                    <select asp-for="studentGender" class="custom-select mr-sm-8" asp-items="Html.GetEnumSelectList<StudentGender>()">
                        <option value="">Please Select Gender</option>
                    </select>       
            </div>
            <d>Books: </d>
            <ul>
                @for (int i = 0; i < Model.StudentBooks?.Count(); i++)
                {
                    <li>
                        @Html.CheckBoxFor(model => model.StudentBooks[i].IsSelected)
                        @Html.DisplayFor(model => model.StudentBooks[i].Title)
                        @Html.HiddenFor(model => model.StudentBooks[i].Title)
                        @Html.HiddenFor(model => model.StudentBooks[i].Id)
                    </li>
                }
            </ul>
            <br />
            <div class="row">
                <div class="col-sm-3">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
                <div class="col-sm-3">
                    <a class="btn btn-warning" asp-action="Index">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

