@model Library.ViewModels.Student.StudentViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" type="tel" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" type="tel"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" type="tel"/>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" type="tel"/>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" type="tel"/>
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <br />
            <d>Books: </d>
            <ul>
                @for (int i = 0; i < Model.StudentBooks?.Count(); i++)
                {
                            @if(Model.StudentBooks[i].IsSelected == true)
                            {
                                <li>
                                    @Html.CheckBoxFor(model => model.StudentBooks[i].IsSelected)
                                    @Html.DisplayFor(model => model.StudentBooks[i].Title)
                                    @Html.HiddenFor(model => model.StudentBooks[i].Title)
                                    @Html.HiddenFor(model => model.StudentBooks[i].Id)
                                </li>
                            }
                }
            </ul>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<br/>
<div>
    <a class="btn btn-warning" asp-action="Index">Back to List</a>
</div>
